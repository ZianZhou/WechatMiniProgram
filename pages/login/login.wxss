/* pages/login/login.wxss */

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.form {
  width: 100%;
  max-width: 450rpx;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

input {
  width: 80%;
  height: 40rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

button {
  width: 100%;
  height: 80rpx;
  background-color: #2196f3;
  color: #fff;
  border: none;
  border-radius: 5rpx;
  cursor: pointer;
}

.register-link {
  margin-top: 10rpx; /* Adjust the margin-top value */
  color: #2196f3;
  cursor: pointer;
}

.bigtitle {
  margin-top: 10rpx;
  font-size: 30rpx; /* Adjust the font-size value to make it bigger */
  font-weight: bold;
  color: #9521f3;
}
