  <view class="form">
    <text class="title">登陆</text>
    <input bindinput="handleUsernameInput" placeholder="用户名" />
    <input bindinput="handlePasswordInput" type="password" placeholder="密码" />
    <button bindtap="handleLogin">点击登陆</button>
  </view>
  <view class="register-link" bindtap="navigateToRegister">
    新用户？请点击这里注册
  </view>
</view>
